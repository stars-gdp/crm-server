{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./build",
        "rootDir": "./src",
        "sourceMap": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "declaration": false,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
